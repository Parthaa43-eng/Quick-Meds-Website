<% layout("layouts/boilerplate.ejs") %>
<body>
    <h2>Shop Details</h2>
    <img src="<%= user.image %>" alt="<%= user.Shop_Name %> image" style="max-width: 20%; height: auto;">

    <h2><%= user.Shop_Name %></h2>
    <p><%= user.description %></p>
    
    <p><strong>Location:</strong> <%= user.location %></p>
    <p><strong>Country:</strong> <%= user.country %></p>

    <!-- Edit Button -->
    <form action="/shops/<%= user._id %>?_method=PUT" method="POST">
        <button type="button" onclick="window.location.href='/shops/<%= user._id %>/edit'">Edit &#x1f58a;</button>
    </form>

    <!-- Delete Button -->
    <form action="/shops/<%= user._id %>?_method=DELETE" method="POST">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this shop?');">Delete Shop</button>
    </form>
</body>
