<% layout("layouts/boilerplate.ejs") %> 
<link rel="stylesheet" href="/styles.css">
<body>
    <main>
        

        <div class="card-container">
            <% for (const user of allUsers) { %>
                <div class="shop-card">
                    
                    <a href="/home/<%= user._id %>">
                        <img class="Shopimg" src="<%= user.image %>" alt="No image">
                        <h2 class="shop-name"><%= user.Shop_Name %></h2>
                    </a>
                </div>
            <% } %>

            <% if (deletedShopId) { %>
                <div class="alert">
                    <p>Shop "<%= shopName %>" deleted.</p>
                    <button id="undoBtn">Undo</button>
                </div>
            <% } %>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Quick Meds. All rights reserved.</p>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const deletedShopId = "<%= deletedShopId %>"; // Retrieve deleted shop ID
            const shopName = "<%= shopName %>"; // Retrieve deleted shop name

            if (deletedShopId) {
                // Automatically remove the notification after 4 seconds
                setTimeout(() => {
                    document.querySelector(".alert").remove();
                }, 4000);

                // Handle the undo button click
                document.getElementById("undoBtn").addEventListener("click", async () => {
                    await fetch(`/home/undo/${deletedShopId}`, {
                        method: 'POST',
                    });
                    window.location.reload(); // Reload the page to show the updated list
                });
            }
        });
    </script>
</body>
