<link rel="stylesheet" href="styles.css"> <!-- External CSS file -->
<% layout("layouts/boilerplate.ejs") %>

<body>
    <h1>All Shops</h1>

    <div class="spinner-border" role="status" id="loader">
        <span class="sr-only">Loading...</span>
    </div>

    <div class="shop-container" id="shop-container">
        <% allUsers.forEach(function(user) { %>
            <a href="/shops/<%= user._id %>" class="shop-card"> <!-- Wrap card inside an anchor tag -->
                <div class="card">
                    <img class="img" src="<%= user.image %>" alt="Image of <%= user.Shop_Name %>">
                    <div class="card-content">
                        <h4><%= user.Shop_Name %></h4>
                        
                    </div>
                </div>
            </a>
        <% }) %>
    </div>

    <script>
        // Simulate loading state
        document.addEventListener("DOMContentLoaded", function() {
            const loader = document.getElementById('loader');
            const shopContainer = document.getElementById('shop-container');
            setTimeout(() => {
                loader.style.display = 'none'; // Hide loader
                shopContainer.style.display = 'grid'; // Show content
            }, 1000); // Simulate loading time
        });
    </script>
</body>
